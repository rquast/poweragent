{
  "name": "poweragent",
  "version": "1.0.0",
  "description": "Local LLM-powered coding agent",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit && tsc -p server/tsconfig.json --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "ws": "^8.18.0",

    "chokidar": "^4.0.1",
    "glob": "^11.0.0",
    "fast-glob": "^3.3.2",

    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "monaco-editor": "^0.52.0",
    "@monaco-editor/react": "^4.6.0",
    "lucide-react": "^0.469.0",
    "clsx": "^2.1.1",
    "marked": "^14.1.3",
    "dompurify": "^3.2.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.5",
    "typescript": "~5.7.2",
    "tsx": "^4.19.4",
    "concurrently": "^9.1.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "@tailwindcss/typography": "^0.5.15"
  }
}
